<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Posts</h1>
    <p><a href="/create">Add new data</a></p>
    <main>
      <table>
        <tr>
          <th>Country</th>
          <th>Population</th>
          <th>Language</th>
        </tr>
        <% posts.forEach(post => {%>
        <tr>
          <td><%= post.country%></td>
          <td><%= post.population%></td>
          <td><%= post.language%></td>
        </tr>
        <%}) %>
      </table>
    </main>
  </body>
  <style>
    table,
    th,
    td {
      border: 1px solid;
    }

    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  </style>
</html>
